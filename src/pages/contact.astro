---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Us - Kids School">
	<div class="max-w-4xl mx-auto">
		<h1 class="text-4xl font-bubble text-primary text-center mb-8">Contact Us 📞</h1>
		
		<div class="grid md:grid-cols-2 gap-8">
			<div class="bg-white p-6 rounded-lg shadow-lg">
				<h2 class="text-2xl font-bubble text-secondary mb-4">Get in Touch!</h2>
				<form class="space-y-4">
					<div>
						<label class="block font-comic text-gray-700 mb-2" for="name">Your Name</label>
						<input type="text" id="name" name="name" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-transparent" required>
					</div>
					<div>
						<label class="block font-comic text-gray-700 mb-2" for="email">Email Address</label>
						<input type="email" id="email" name="email" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-transparent" required>
					</div>
					<div>
						<label class="block font-comic text-gray-700 mb-2" for="message">Message</label>
						<textarea id="message" name="message" rows="4" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-transparent" required></textarea>
					</div>
					<button type="submit" class="w-full bg-primary text-white font-bubble py-2 px-4 rounded-lg hover:bg-primary/90 transition-colors">
						Send Message ✉️
					</button>
				</form>
			</div>

			<div class="space-y-6">
				<div class="bg-white p-6 rounded-lg shadow-lg">
					<h2 class="text-2xl font-bubble text-secondary mb-4">Find Us Here! 🗺️</h2>
					<div id="map" class="h-64 rounded-lg"></div>
				</div>

				<div class="bg-white p-6 rounded-lg shadow-lg">
					<h2 class="text-2xl font-bubble text-secondary mb-4">School Address 🏫</h2>
					<address class="font-comic not-italic">
						<p>123 Learning Street</p>
						<p>Education City, ED 12345</p>
						<p class="mt-4">📱 Phone: (123) 456-7890</p>
						<p>📧 Email: hello@kidsschool.com</p>
					</address>
				</div>
			</div>
		</div>
	</div>
</Layout>

<script>
	import L from 'leaflet';

	// Initialize the map after the component mounts
	document.addEventListener('DOMContentLoaded', () => {
		const map = L.map('map').setView([51.505, -0.09], 13);
		
		L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
			attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
		}).addTo(map);

		// Add a marker for the school location
		L.marker([51.505, -0.09])
			.addTo(map)
			.bindPopup('Kids School<br>123 Learning Street')
			.openPopup();
	});
</script>
