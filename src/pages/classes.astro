---

<Layout title="Classes & Teachers - Kids School">
    <div class="max-w-7xl mx-auto px-4 py-12">
        <!-- Classes Section -->
        <section class="mb-20">
            <h1 class="text-4xl font-bubble text-primary text-center mb-12">Our Classes üìö</h1>
            
            <div class="grid md:grid-cols-2 gap-8">
                {classes.map(classItem => (
                    <div class="bg-white p-6 rounded-lg shadow-lg transform hover:scale-102 transition-transform">
                        <div class="flex items-center mb-4">
                            <span class="text-4xl mr-4">{classItem.icon}</span>
                            <div>
                                <h2 class="text-2xl font-bubble text-secondary">{classItem.grade}</h2>
                                <p class="font-comic text-gray-600">Age: {classItem.ageGroup}</p>
                            </div>
                        </div>
                        
                        <p class="font-comic text-gray-700 mb-4">{classItem.description}</p>
                        
                        <div class="bg-background p-4 rounded-lg">
                            <h3 class="font-bubble text-primary mb-2">Daily Activities:</h3>
                            <ul class="grid grid-cols-2 gap-2">
                                {classItem.activities.map(activity => (
                                    <li class="font-comic flex items-center">
                                        <span class="text-secondary mr-2">‚ú¶</span>
                                        {activity}
                                    </li>
                                ))}
                            </ul>
                        </div>
                    </div>
                ))}
            </div>
        </section>

        <!-- Teachers Section -->
        <section>
            <h1 class="text-4xl font-bubble text-primary text-center mb-12">Meet Our Teachers üë©‚Äçüè´</h1>
            
            <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
                {teachers.map(teacher => (
                    <div class="bg-white p-6 rounded-lg shadow-lg transform hover:scale-105 transition-transform">
                        <div class="relative mb-4 aspect-square overflow-hidden rounded-lg">
                            <img 
                                src={teacher.image} 
                                alt={teacher.name}
                                class="object-contain w-full h-full"
                            />
                        </div>
                        
                        <h2 class="text-xl font-bubble text-secondary mb-2">{teacher.name}</h2>
                        <p class="font-comic text-primary mb-4">{teacher.role}</p>
                        
                        <div class="space-y-2">
                            <h3 class="font-bubble text-gray-700">Qualifications:</h3>
                            <ul class="font-comic text-sm text-gray-600">
                                {teacher.qualifications.map(qual => (
                                    <li class="flex items-center">
                                        <span class="text-accent mr-2">‚òÖ</span>
                                        {qual}
                                    </li>
                                ))}
                            </ul>
                            
                            <h3 class="font-bubble text-gray-700 mt-4">Specialties:</h3>
                            <ul class="font-comic text-sm text-gray-600">
                                {teacher.specialties.map(specialty => (
                                    <li class="flex items-center">
                                        <span class="text-secondary mr-2">‚ú¶</span>
                                        {specialty}
                                    </li>
                                ))}
                            </ul>
                        </div>
                    </div>
                ))}
            </div>
        </section>
    </div>
</Layout>

<style>
    .aspect-square {
        aspect-ratio: 1 / 1;
    }
</style>
