    },
    {
        grade: "Grade 3",
        ageGroup: "7-8 years",
        description: "Fostering independence and deeper understanding of core subjects.",
        activities: ["Literature", "Advanced Math", "Science Projects", "Social Studies"],
        icon: "üî¨"
    }
];

const teachers = [
    {
        name: "Ms. Sarah Johnson",
        role: "Kindergarten Lead Teacher",
        qualifications: ["M.Ed. Early Childhood Education", "15 years experience"],
        specialties: ["Play-based Learning", "Child Development"],
        image: "/images/teacher-placeholder.svg"
    },
    {
