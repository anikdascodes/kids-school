    {
        icon: "üé®",
        title: "Creative Arts",
        description: "Express yourself through painting, drawing, and crafts!",
        color: "from-primary-light to-primary"
    },
    {
        icon: "üî¨",
        title: "Science Lab",
        description: "Discover the wonders of science through fun experiments!",
        color: "from-secondary-light to-secondary"
    },
    {
        icon: "üéµ",
        title: "Music & Dance",
        description: "Move, groove, and make beautiful music together!",
        color: "from-accent-light to-accent"
    },
    {
        icon: "üå±",
        title: "Nature Club",
        description: "Learn about our planet and how to care for it!",
        color: "from-primary-light to-primary"
    },
    {
        icon: "üèÉ",
        title: "Sports & Games",
        description: "Stay active and healthy with fun physical activities!",
        color: "from-secondary-light to-secondary"
    },
    {
        icon: "ü§ñ",
        title: "Technology",
        description: "Learn coding and technology through interactive games!",
        color: "from-accent-light to-accent"
    }
