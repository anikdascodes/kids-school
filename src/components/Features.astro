---

<section class="relative py-12 sm:py-16 lg:py-20 overflow-hidden">
    <!-- Background Elements -->
    <div class="absolute inset-0 bg-dots opacity-20"></div>
    <div class="absolute top-0 inset-x-0 h-40 bg-gradient-to-b from-white to-transparent"></div>
    <div class="absolute bottom-0 inset-x-0 h-40 bg-gradient-to-t from-white to-transparent"></div>
    
    <div class="relative container mx-auto px-4">
        <div class="text-center max-w-3xl mx-auto mb-12 sm:mb-16">
            <h2 class="text-3xl sm:text-4xl md:text-5xl font-bubble text-primary mb-4 sm:mb-6 relative inline-block">
                <span class="absolute -inset-1 bg-gradient-to-r from-primary-light via-accent to-secondary rounded-lg blur opacity-30"></span>
                <span class="relative">Discover Our Amazing Features! ‚ú®</span>
            </h2>
            <p class="text-lg sm:text-xl font-comic text-text-secondary max-w-2xl mx-auto">
                Explore all the exciting activities and programs we offer to make learning fun and engaging!
            </p>
        </div>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
            {features.map(feature => (
                <div class="group relative feature-card opacity-0">
                    <!-- Card Background Glow -->
                    <div class="absolute -inset-1 bg-gradient-to-r from-primary-light via-accent to-secondary rounded-xl blur opacity-25 group-hover:opacity-40 transition duration-300"></div>
                    
                    <!-- Card Content -->
                    <div class="relative bg-card p-6 sm:p-8 rounded-xl shadow-card group-hover:shadow-hover transform group-hover:-translate-y-1 transition duration-300">
                        <div class="flex flex-col items-center text-center">
                            <!-- Icon Container -->
                            <div class="relative mb-4 sm:mb-6">
                                <div class="absolute -inset-4 bg-gradient-to-r {feature.color} rounded-full blur opacity-25 group-hover:opacity-40 transition duration-300"></div>
                                <div class="relative text-4xl sm:text-5xl transform group-hover:scale-110 transition duration-300">
                                    {feature.icon}
                                </div>
                            </div>
                            
                            <h3 class="text-xl sm:text-2xl font-bubble text-primary mb-2 sm:mb-3 group-hover:text-primary-dark transition-colors">
                                {feature.title}
                            </h3>
                            
                            <p class="font-comic text-text-secondary group-hover:text-text-primary transition-colors text-base sm:text-lg">
                                {feature.description}
                            </p>
                            
                            <!-- Hover Indicator -->
                            <div class="absolute bottom-3 sm:bottom-4 left-1/2 transform -translate-x-1/2 opacity-0 group-hover:opacity-100 transition-opacity">
                                <span class="text-secondary-dark">‚ú¶</span>
                            </div>
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>

<style>
    @keyframes float {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
    }

    /* Responsive animations */
    @media (prefers-reduced-motion: reduce) {
        .group:hover {
            transform: none;
        }
        .group:hover * {
            transform: none;
            transition: none;
        }
    }

    /* Improve touch interactions on mobile */
    @media (hover: none) {
        .group:active {
            transform: scale(0.98);
        }
    }
</style>

<div class="w-full h-24 bg-white" style="clip-path: polygon(0 0, 100% 0, 100% 100%, 0 0);"></div>

<script>
    // Intersection Observer for feature cards
    const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry, index) => {
            if (entry.isIntersecting) {
                setTimeout(() => {
                    entry.target.classList.add('animate-slide-in');
                    entry.target.style.opacity = '1';
                }, index * 100); // Stagger the animations
            }
        });
    }, { threshold: 0.1 });

    // Observe all feature cards
    document.querySelectorAll('.feature-card').forEach(card => {
        observer.observe(card);
    });
</script>
